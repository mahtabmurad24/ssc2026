generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model JerseyOrder {
  id           String   @id @default(cuid())
  name         String
  jerseyName   String?
  class        String
  section      String
  mobileNumber String
  size         String   @default("M")
  trxId        String?
  paymentNumber String?
  paymentMethod String?
  location     String?
  customLocation String?
  kitVote      String?
  amountPaid   Float?  @default(0)
  totalPrice   Float?  @default(0)
  remainingPrice Float? @default(0)
  status       String   @default("pending")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model JerseyImage {
  id        String   @id @default(cuid())
  title     String
  imageUrl  String
  imageType String   @default("jersey") // "jersey" or "fabric"
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model KitVote {
  id        String   @id @default(cuid())
  vote      String   // "blue" or "green"
  createdAt DateTime @default(now())
}
